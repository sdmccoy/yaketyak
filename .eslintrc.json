{
  "rules": {
    "react/prop-types": [0],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "comma-dangle": ["error", "always-multiline"],
    "no-console": "off",
    "no-unused-vars": "off",
    "indent": [ "error", 2 ],
    "semi": ["error", "always"]
  },
  "plugins": [ "react" ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "module": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "globals": {
    "__APP_ID__": false,
    "__API_TOKEN__": false,
    "__DEBUG__": false,
    "__API_CON__": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}
